generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  password      String
  role          String    @default("ADMIN")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Service {
  id          String   @id @default(cuid())
  name        String   // English
  nameAm      String   // Amharic
  desc        String   // English
  descAm      String   // Amharic
  iconName    String   // Lucide icon name
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Event {
  id          String   @id @default(cuid())
  title       String   // English
  titleAm     String   // Amharic
  category    String   // English
  categoryAm  String   // Amharic
  location    String   // English
  locationAm  String   // Amharic
  year        String
  image       String
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Testimonial {
  id        String   @id @default(cuid())
  quote     String   // English
  quoteAm   String   // Amharic
  author    String   // English
  authorAm  String   // Amharic
  role      String   // English
  roleAm    String   // Amharic
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FAQ {
  id        String   @id @default(cuid())
  q         String   // English
  qAm       String   // Amharic
  a         String   // English
  aAm       String   // Amharic
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GlobalSettings {
  id            String   @id @default("singleton")
  isYellowTheme Boolean  @default(false)
  updatedAt     DateTime @updatedAt
}

model ContactRequest {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String
  eventType   String
  message     String
  status      String   @default("NEW") // NEW, IN_PROGRESS, COMPLETED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
